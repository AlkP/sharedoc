<div class="modal" id="sign_up_modal" style="display: none;">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3>Profile</h3>
  </div>
  <% if current_user %>
    <div><% edit_profile_user %></div>
  <%else%>
    <div><% new_user %></div>
  <%end%>
  <%= form_for @user do |f| %>
    <div class="modal-body">
      <table class="table table-striped">
        <tr class="success">
          <td>
            Email
          </td>
          <td>
            <%= f.text_field :email %>
          </td>
        </tr>
        <tr class="warning">
          <td>
        Password
          </td>
          <td>
        <%= f.password_field :password %>
          </td>
        </tr>
        <tr class="error">
          <td>
        Password confirmation
          </td>
          <td>
        <%= f.password_field :password_confirmation %>
          </td>
        </tr>
        <tr class="info">
          <td>
        Country
          </td>
          <td>
        <%= f.country_select :country, ["Ukraine"] %>
          </td>
        </tr>
      </table>
    </div>
    <div class="modal-footer">
      <a href="/" class="btn" data-dismiss="modal">Close</a>
      <!--<a href="#" class="btn btn-primary">Save Changes</a>-->
      <%= f.submit %>
    </div>

  <%end%>
</div>



<div class="modal" id="login_modal" style="display: none;">

  <%= render "sessions/new" %>


</div>