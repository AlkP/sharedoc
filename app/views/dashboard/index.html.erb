    <div class="span8">
      <div class="row-fluid">
        <div class="span12">
          <div id='chart2'><% area_chart %></div>
          <%= render_chart(@areachart, 'chart2') %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">

          <% if current_user %>
            <div id='chart3'><% column_chart %></div>
            <%= render_chart(@column_chart, 'chart3') %>
            <table id="activities" class="table table-condensed table-hover">
              <thead>
              <tr class="warning">
                <th>Date</th>
                <!--<th>Name</th>-->
                <th>Description</th>
              </tr>
              </thead>
              <tbody>
              <% @activities.each do |activities| %>
                  <tr>
                    <td><%= activities.created_at %></td>
                    <!--<td>< %= activities.time %></td>-->
                    <!--<td> <%= activities.name %></td>-->
                    <td><%= activities.description %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>


<script language="JavaScript" type="text/javascript">
  var cookie = getCookie('reload');
  if (cookie == null)
  {
    setCookie('reload', 0);
  }
  var reload = getCookie('reload');
  if (reload == 0)
  {
    setCookie('reload', 1);
    window.location.reload();
  }
</script>